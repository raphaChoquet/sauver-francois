{
  "port": 8080,
  "socket": true,
  "debug": true,
  "events": [
    {
      "listener": "create or join",
      "method": "room::join"
    },
    {
      "listener": "get rooms",
      "method": "room::getAll"
    }
  ],
  "routes": {
    "dynamic": [
      {
        "path": "/",
        "view": "index"
      }
    ],
    "static": [
      {
        "path": "/node_modules",
        "folder": "node_modules"
      },
      {
        "path": "/dist",
        "folder": "public/dist"
      },
      {
        "path": "/css",
        "folder": "public/src/css"
      },
      {
        "path": "/img",
        "folder": "public/img"
      }
    ]
  }
}
